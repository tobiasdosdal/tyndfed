---
import BaseLayout from '~/layouts/BaseLayout.astro';
import WindowChrome from '~/components/WindowChrome.astro';
import LegalSection from '~/components/LegalSection.astro';
import { legalContent } from '~/data/legal';
---

<BaseLayout
  title="Tyndfed - Privacy Policy & Terms of Service"
  description="Privacy Policy and Terms of Service for Tyndfed apps and services."
  canonical="https://tyndfed.dk/privacy"
>
  <WindowChrome>
    <div class="content-area">
      <nav class="lang-switch" aria-label="Select language">
        <button
          type="button"
          class="lang-btn active"
          data-lang="da"
          aria-controls="content-da"
          aria-pressed="true"
        >
          Dansk
        </button>
        <button
          type="button"
          class="lang-btn"
          data-lang="en"
          aria-controls="content-en"
          aria-pressed="false"
        >
          English
        </button>
      </nav>

      <div id="content-da" class="lang-content" data-lang="da" lang="da">
        <LegalSection document={legalContent.da.privacy} />
        <hr class="divider" />
        <LegalSection document={legalContent.da.terms} />
      </div>

      <div id="content-en" class="lang-content" data-lang="en" lang="en" hidden>
        <LegalSection document={legalContent.en.privacy} />
        <hr class="divider" />
        <LegalSection document={legalContent.en.terms} />
      </div>

      <nav class="back-nav-bottom">
        <a href="/" class="back-link">‚Üê Back to main</a>
      </nav>
    </div>
  </WindowChrome>
</BaseLayout>

<script>
  const storageKey = 'tyndfed-lang';
  const supportedLangs = ['da', 'en'] as const;
  type Language = (typeof supportedLangs)[number];
  const supportedLangSet = new Set<Language>(supportedLangs);

  function initLanguageToggle() {
    const buttons = document.querySelectorAll<HTMLButtonElement>('.lang-btn');
    const contents = document.querySelectorAll<HTMLElement>('.lang-content');
    if (buttons.length === 0 || contents.length === 0) return;

    const savedLang = getSavedLanguage();
    setLanguage(savedLang);

    buttons.forEach(btn => {
      btn.addEventListener('click', () => {
        const lang = btn.getAttribute('data-lang');
        if (isSupportedLanguage(lang)) {
          setLanguage(lang);
          persistLanguage(lang);
        }
      });
    });

    function setLanguage(lang: Language) {
      buttons.forEach(btn => {
        const isActive = btn.getAttribute('data-lang') === lang;
        btn.classList.toggle('active', isActive);
        btn.setAttribute('aria-pressed', String(isActive));
      });
      contents.forEach(content => {
        const contentLang = content.getAttribute('data-lang');
        content.hidden = contentLang !== lang;
      });
    }

    function persistLanguage(lang: Language) {
      try {
        localStorage.setItem(storageKey, lang);
      } catch {
        // Ignore storage errors in strict privacy modes.
      }
    }

    function getSavedLanguage(): Language {
      try {
        const saved = localStorage.getItem(storageKey);
        if (isSupportedLanguage(saved)) return saved;
      } catch {
        // Ignore storage errors in strict privacy modes.
      }
      return navigator.language?.toLowerCase().startsWith('da') ? 'da' : 'en';
    }

    function isSupportedLanguage(lang: string | null): lang is Language {
      return typeof lang === 'string' && supportedLangSet.has(lang as Language);
    }
  }

  initLanguageToggle();
</script>

<style>
  .content-area {
    padding: 28px;
    max-height: calc(100vh - 120px);
    overflow-y: auto;
    scrollbar-width: thin;
    scrollbar-color: var(--text-ghost) transparent;
  }

  .content-area::-webkit-scrollbar {
    width: 6px;
  }

  .content-area::-webkit-scrollbar-track {
    background: transparent;
  }

  .content-area::-webkit-scrollbar-thumb {
    background: var(--text-ghost);
    border-radius: 3px;
  }

  .content-area::-webkit-scrollbar-thumb:hover {
    background: var(--text-muted);
  }

  .lang-switch {
    display: flex;
    justify-content: center;
    gap: 8px;
    margin-bottom: 28px;
  }

  .lang-btn {
    font-family: var(--font-display);
    font-size: var(--font-size-sm);
    font-weight: 500;
    background: var(--bg-elevated);
    color: var(--text-secondary);
    border: 1px solid var(--chrome-border);
    padding: 10px 20px;
    border-radius: 8px;
    cursor: pointer;
    transition:
      background var(--duration-fast) ease,
      color var(--duration-fast) ease,
      border-color var(--duration-fast) ease,
      transform var(--duration-fast) var(--ease-spring);
  }

  .lang-btn:hover {
    background: var(--bg-hover);
    color: var(--text-primary);
    transform: translateY(-1px);
  }

  .lang-btn.active {
    background: var(--accent-dim);
    color: var(--accent);
    border-color: var(--chrome-border-accent);
  }

  .divider {
    border: none;
    border-top: 1px solid var(--chrome-border);
    margin: 36px 0;
    position: relative;
  }

  .divider::after {
    content: '';
    position: absolute;
    top: -1px;
    left: 50%;
    transform: translateX(-50%);
    width: 40px;
    height: 2px;
    background: linear-gradient(90deg, transparent, var(--chrome-border-strong), transparent);
  }

  .back-nav-bottom {
    margin-top: 28px;
    padding-top: 24px;
    border-top: 1px solid var(--chrome-border);
    text-align: center;
  }

  .back-nav-bottom .back-link {
    color: var(--text-muted);
    font-family: var(--font-display);
    font-size: var(--font-size-sm);
    font-weight: 500;
    padding: 10px 20px;
    display: inline-flex;
    align-items: center;
    gap: 6px;
    border-radius: 8px;
    transition:
      color var(--duration-fast) ease,
      background var(--duration-fast) ease;
  }

  .back-nav-bottom .back-link:hover {
    color: var(--accent);
    background: var(--accent-dim);
  }

  @media (max-width: 480px) {
    .content-area {
      padding: 20px;
    }

    .lang-btn {
      padding: 8px 16px;
      font-size: var(--font-size-xs);
    }
  }
</style>
