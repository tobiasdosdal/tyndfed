---
import BaseLayout from '~/layouts/BaseLayout.astro';
import WindowChrome from '~/components/WindowChrome.astro';
import BackLink from '~/components/BackLink.astro';
import ProjectCard from '~/components/ProjectCard.astro';
import { projects } from '~/data/projects';
---

<BaseLayout
  title="Tyndfed - Projects"
  description="View Tyndfed's portfolio of innovative projects including Border Genius, Bodegalisten, HabitHero, and more."
  canonical="https://tyndfed.dk/projects"
>
  <WindowChrome>
    <BackLink />
    <section class="projects">
      {projects.map((project, index) => (
        <ProjectCard project={project} priority={index < 2} />
      ))}
    </section>
  </WindowChrome>
</BaseLayout>

<style>
  .projects {
    padding: 28px 32px 44px;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 18px;
  }

  @media (max-width: 768px) {
    .projects {
      padding: 24px 24px 34px;
      grid-template-columns: 1fr;
      gap: 14px;
    }
  }

  @media (max-width: 480px) {
    .projects {
      padding: 18px 14px 24px;
      gap: 12px;
    }
  }
</style>
