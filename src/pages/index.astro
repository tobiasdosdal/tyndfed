---
import BaseLayout from '~/layouts/BaseLayout.astro';
import WindowChrome from '~/components/WindowChrome.astro';
import SocialLinks from '~/components/SocialLinks.astro';
import ContactInfo from '~/components/ContactInfo.astro';
import PrimaryButton from '~/components/PrimaryButton.astro';
import { AsciiLogo } from '~/components/AsciiLogo';
---

<BaseLayout
  title="Tyndfed - Software Development & Creative Services"
  canonical="https://tyndfed.dk/"
>
  <WindowChrome>
    <AsciiLogo client:idle />
    <p class="tagline">Software development & creative services</p>
    <footer class="footer">
      <nav>
        <PrimaryButton href="/projects">view-projects</PrimaryButton>
      </nav>
      <SocialLinks />
      <ContactInfo />
    </footer>
  </WindowChrome>
</BaseLayout>

<style>
  .tagline {
    text-align: center;
    color: var(--text-secondary);
    font-family: var(--font-display);
    font-size: var(--font-size-sm);
    font-weight: 500;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    margin: 0;
    padding: 0 24px;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 16px;
    line-height: 1.5;
  }

  .tagline::before,
  .tagline::after {
    content: '';
    width: 40px;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--chrome-border-strong));
    flex-shrink: 0;
  }

  .tagline::after {
    background: linear-gradient(90deg, var(--chrome-border-strong), transparent);
  }

  .footer {
    text-align: center;
    padding: 36px 24px 44px;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 28px;
  }

  .footer nav {
    margin: 0;
  }

  @media (max-width: 768px) {
    .tagline::before,
    .tagline::after {
      width: 24px;
    }
  }

  @media (max-width: 480px) {
    .tagline {
      font-size: var(--font-size-sm);
      padding: 0 16px;
      letter-spacing: 0.05em;
      gap: 12px;
      text-align: center;
    }

    .tagline::before,
    .tagline::after {
      width: 16px;
    }

    .footer {
      padding: 24px 16px 30px;
      gap: 20px;
    }

    .footer nav {
      width: 100%;
    }
  }
</style>
