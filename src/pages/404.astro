---
import BaseLayout from '~/layouts/BaseLayout.astro';
import WindowChrome from '~/components/WindowChrome.astro';
import PrimaryButton from '~/components/PrimaryButton.astro';
---

<BaseLayout title="404 - Page Not Found | Tyndfed" noindex={true}>
  <WindowChrome>
    <section class="error-content">
      <div class="error-code">
        <span>4</span>
        <span class="error-zero">0</span>
        <span>4</span>
      </div>
      <h1 class="error-message">Page Not Found</h1>
      <p class="error-description">
        The page you're looking for doesn't exist or has been moved.
      </p>
      <nav>
        <PrimaryButton href="/">
          <span class="arrow">‚Üê</span> Back to Home
        </PrimaryButton>
      </nav>
    </section>
  </WindowChrome>
</BaseLayout>

<style>
  .error-content {
    text-align: center;
    padding: 60px 24px;
    animation: fadeIn 0.5s var(--ease-out-expo);
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .error-code {
    font-family: var(--font-display);
    font-size: clamp(80px, 15vw, 140px);
    font-weight: 700;
    letter-spacing: -0.03em;
    line-height: 1;
    margin-bottom: 24px;
    position: relative;
    display: inline-flex;
    color: var(--traffic-close);
    text-shadow:
      0 0 20px rgba(255, 95, 87, 0.4),
      0 0 60px rgba(255, 95, 87, 0.2);
  }

  .error-code span {
    display: inline-block;
    animation: float 3s ease-in-out infinite;
  }

  .error-code span:nth-child(1) { animation-delay: 0s; }
  .error-code span:nth-child(2) { animation-delay: 0.15s; }
  .error-code span:nth-child(3) { animation-delay: 0.3s; }

  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-8px); }
  }

  .error-zero {
    position: relative;
  }

  .error-zero::before {
    content: '0';
    position: absolute;
    left: 0;
    top: 0;
    color: var(--accent);
    opacity: 0;
    animation: glitchPulse 4s ease-in-out infinite;
  }

  @keyframes glitchPulse {
    0%, 90%, 100% { opacity: 0; transform: translate(0, 0); }
    92% { opacity: 0.8; transform: translate(-3px, -2px); }
    94% { opacity: 0; }
    96% { opacity: 0.6; transform: translate(3px, 1px); }
    98% { opacity: 0; transform: translate(0, 0); }
  }

  .error-code:hover {
    animation: glitch 0.4s ease-in-out;
  }

  @keyframes glitch {
    0%, 100% { transform: translate(0); filter: none; }
    10% { transform: translate(-3px, 2px); }
    20% { transform: translate(3px, -2px); filter: hue-rotate(90deg); }
    30% { transform: translate(-2px, -1px); }
    40% { transform: translate(2px, 1px); filter: hue-rotate(-90deg); }
    50% { transform: translate(-1px, 2px); }
    60% { transform: translate(1px, -1px); }
    70% { transform: translate(-2px, -2px); filter: hue-rotate(45deg); }
    80% { transform: translate(2px, 2px); }
    90% { transform: translate(-1px, 1px); }
  }

  .error-message {
    font-family: var(--font-display);
    font-size: var(--font-size-xl);
    font-weight: 600;
    margin-bottom: 12px;
    color: var(--text-primary);
  }

  .error-description {
    color: var(--text-secondary);
    margin-bottom: 32px;
    font-size: var(--font-size-sm);
    max-width: 300px;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.6;
  }

  .arrow {
    transition: transform var(--duration-fast) var(--ease-spring);
  }

  nav:hover .arrow {
    transform: translateX(-4px);
  }

  @media (max-width: 600px) {
    .error-content { padding: 48px 20px; }
    .error-code { font-size: clamp(60px, 20vw, 100px); margin-bottom: 20px; }
    .error-message { font-size: var(--font-size-lg); }
  }

  @media (prefers-reduced-motion: reduce) {
    .error-code span { animation: none; }
    .error-zero::before { display: none; }
    .error-code:hover { animation: none; }
  }
</style>
