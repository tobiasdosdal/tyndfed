---
interface Props {
  href?: string;
  label?: string;
}

const { href = '/', label = 'Back to main' } = Astro.props;
---

<nav class="back-nav">
  <a href={href} class="back-link">‚Üê {label}</a>
</nav>

<style>
  .back-nav {
    padding: 16px 24px;
    border-bottom: 1px solid var(--chrome-border);
  }

  .back-link {
    color: var(--text-secondary);
    font-family: var(--font-display);
    font-size: var(--font-size-sm);
    font-weight: 500;
    letter-spacing: 0.01em;
    display: inline-flex;
    align-items: center;
    gap: 6px;
    min-height: 38px;
    padding: 8px 14px;
    margin: -8px -14px;
    border-radius: 8px;
    border: 1px solid var(--interactive-border);
    background: var(--interactive-bg);
    transition:
      color var(--duration-fast) ease,
      background var(--duration-fast) ease,
      border-color var(--duration-fast) ease,
      transform var(--duration-fast) var(--ease-smooth),
      box-shadow var(--duration-normal) var(--ease-smooth);
  }

  .back-link:hover {
    color: var(--text-primary);
    background: var(--interactive-bg-hover);
    border-color: var(--interactive-border-hover);
    box-shadow: var(--interactive-shadow);
    transform: translateY(-1px);
    text-decoration: none;
  }

  .back-link:active {
    transform: translateY(0);
    border-color: var(--interactive-border-active);
  }

  .back-link:focus-visible {
    border-color: var(--interactive-border-active);
    box-shadow: var(--interactive-shadow-strong);
  }

  @media (max-width: 480px) {
    .back-nav {
      padding: 12px 14px;
    }

    .back-link {
      width: 100%;
      justify-content: center;
      margin: 0;
      min-height: 42px;
      padding: 10px 12px;
      font-size: var(--font-size-xs);
    }
  }
</style>
