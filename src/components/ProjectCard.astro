---
import type { Project } from '~/data/projects';

interface Props {
  project: Project;
  priority?: boolean;
}

const { project, priority = false } = Astro.props;
---

<article class="project">
  <header class="project-header">
    <img
      src={project.icon}
      alt={`${project.name} logo`}
      class="project-icon"
      loading={priority ? 'eager' : 'lazy'}
      fetchpriority={priority ? 'high' : 'auto'}
      decoding="async"
      width="64"
      height="64"
    />
    <h3 class="project-title">{project.name}</h3>
  </header>
  <p class="project-description">{project.description}</p>
  <div class="project-links">
    {project.links.map((link) => (
      <a
        href={link.url}
        target="_blank"
        rel="noopener noreferrer"
        aria-label={`${project.name} - ${link.label} (opens in a new tab)`}
        class="project-link"
      >
        â†’ {link.label}
      </a>
    ))}
  </div>
</article>

<style>
  .project {
    padding: 22px;
    background: var(--bg-elevated);
    border: 1px solid var(--interactive-border);
    border-radius: 8px;
    display: flex;
    flex-direction: column;
    gap: 14px;
    transition:
      transform var(--duration-fast) var(--ease-smooth),
      box-shadow var(--duration-normal) var(--ease-smooth),
      border-color var(--duration-fast) ease,
      background var(--duration-fast) ease;
  }

  .project:hover {
    border-color: var(--interactive-border-hover);
    background: var(--bg-hover);
    transform: translateY(-2px);
    box-shadow: var(--interactive-shadow);
  }

  .project-header {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .project-icon {
    width: 64px;
    height: 64px;
    border-radius: 8px;
    object-fit: cover;
    border: 1px solid var(--chrome-border);
  }

  .project-title {
    color: var(--text-primary);
    margin: 0;
    font-family: var(--font-display);
    font-size: var(--font-size-lg);
    font-weight: 500;
  }

  .project-description {
    color: var(--text-secondary);
    margin: 0;
    font-size: var(--font-size-sm);
    line-height: 1.7;
  }

  .project-links {
    display: flex;
    gap: 10px;
    flex-wrap: wrap;
    margin-top: auto;
  }

  .project-link {
    color: var(--text-secondary);
    font-size: var(--font-size-sm);
    font-weight: 500;
    padding: 7px 12px;
    background: var(--interactive-bg);
    border: 1px solid var(--interactive-border);
    border-radius: 5px;
    transition:
      color var(--duration-fast) ease,
      border-color var(--duration-fast) ease,
      background var(--duration-fast) ease,
      transform var(--duration-fast) var(--ease-smooth),
      box-shadow var(--duration-normal) var(--ease-smooth);
  }

  .project-link:hover {
    color: var(--text-primary);
    border-color: var(--interactive-border-hover);
    background: var(--interactive-bg-hover);
    box-shadow: var(--interactive-shadow);
    transform: translateY(-1px);
  }

  .project-link:active {
    transform: translateY(0);
    border-color: var(--interactive-border-active);
  }

  .project-link:focus-visible {
    border-color: var(--interactive-border-active);
    box-shadow: var(--interactive-shadow-strong);
  }

  @media (max-width: 480px) {
    .project {
      padding: 16px;
    }

    .project-icon {
      width: 52px;
      height: 52px;
    }

    .project-links {
      flex-direction: column;
      gap: 8px;
    }

    .project-link {
      width: 100%;
      text-align: center;
      justify-content: center;
      font-size: var(--font-size-xs);
      min-height: 40px;
    }
  }
</style>
