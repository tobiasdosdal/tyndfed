<main class="window">
  <header class="title-bar">
    <div class="controls" aria-hidden="true">
      <span class="control-btn close">
        <svg viewBox="0 0 10 10" class="control-icon">
          <path d="M1 1L9 9M9 1L1 9" stroke-width="1.5" stroke-linecap="round" />
        </svg>
      </span>
      <span class="control-btn minimize">
        <svg viewBox="0 0 10 10" class="control-icon">
          <path d="M1 5H9" stroke-width="1.5" stroke-linecap="round" />
        </svg>
      </span>
      <span class="control-btn maximize">
        <svg viewBox="0 0 10 10" class="control-icon">
          <path d="M1 1h8v8H1z" stroke-width="1.2" stroke-linecap="round" stroke-linejoin="round" />
        </svg>
      </span>
    </div>
  </header>
  <slot />
</main>

<style>
  .window {
    background: var(--bg-surface);
    border-radius: 8px;
    overflow: hidden;
    width: 100%;
    max-width: 960px;
    margin: 0 auto;
    border: 1px solid var(--interactive-border-hover);
    position: relative;
    z-index: 10;
    animation: windowBoot var(--duration-slow) var(--ease-out-expo) both;
    box-shadow: 0 28px 52px -28px rgba(0, 0, 0, 0.72);
  }

  @keyframes windowBoot {
    0% {
      opacity: 0;
      transform: scale(0.95) translateY(20px);
      filter: blur(4px);
    }
    100% {
      opacity: 1;
      transform: scale(1) translateY(0);
      filter: blur(0);
    }
  }

  .title-bar {
    padding: 12px 18px;
    display: flex;
    align-items: center;
    gap: var(--space-md);
    background: var(--bg-elevated);
    border-bottom: 1px solid var(--chrome-border);
  }

  .controls {
    display: flex;
    gap: 8px;
    align-items: center;
  }

  .control-btn {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    border: none;
    padding: 0;
    margin: 0;
    cursor: default;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: opacity var(--duration-fast) ease;
  }

  .control-icon {
    width: 6px;
    height: 6px;
    stroke: currentColor;
    stroke-width: 1.5;
    fill: none;
    opacity: 0;
    transition: opacity var(--duration-fast) ease;
  }

  .close {
    background: var(--traffic-close);
    color: rgba(0, 0, 0, 0.7);
  }

  .minimize {
    background: var(--traffic-minimize);
    color: rgba(0, 0, 0, 0.7);
  }

  .maximize {
    background: var(--traffic-maximize);
    color: rgba(0, 0, 0, 0.7);
  }

  .window:hover .control-icon {
    opacity: 1;
  }

  .control-btn:hover {
    opacity: 0.8;
  }

  .control-btn:hover .control-icon {
    opacity: 1;
  }

  @media (max-width: 768px) {
    .window {
      border-radius: 6px;
    }
  }

  @media (max-width: 480px) {
    .window {
      border-radius: 6px;
      max-width: 100%;
      max-height: none;
      overflow: hidden;
    }

    .title-bar {
      padding: 10px 12px;
    }

    .control-btn {
      width: 10px;
      height: 10px;
    }

    .control-icon {
      width: 5px;
      height: 5px;
    }

    .controls {
      gap: 6px;
    }
  }
</style>
