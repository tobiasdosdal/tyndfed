---
interface Props {
  href: string;
  class?: string;
}

const { href, class: className } = Astro.props;
---

<a href={href} class:list={['terminal-btn', className]}>
  <span class="prompt">$</span>
  <span class="command"><slot /></span>
  <span class="cursor"></span>
</a>

<style>
  .terminal-btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    font-family: var(--font-mono);
    font-size: var(--font-size-sm);
    font-weight: 500;
    padding: 12px 18px;
    background: var(--interactive-bg);
    border: 1px solid var(--interactive-border);
    border-radius: 6px;
    position: relative;
    transition:
      transform var(--duration-fast) var(--ease-smooth),
      box-shadow var(--duration-normal) var(--ease-smooth),
      border-color var(--duration-fast) ease,
      background var(--duration-fast) ease;
  }

  .prompt {
    color: var(--accent);
    font-weight: 600;
  }

  .command {
    color: var(--text-secondary);
    transition: color var(--duration-fast) ease;
  }

  .cursor {
    width: 7px;
    height: 14px;
    background: var(--accent);
    opacity: 0.35;
    animation: blink 1s step-end infinite;
    transition: opacity var(--duration-fast) ease;
  }

  @keyframes blink {
    0%, 100% { opacity: 1; }
    50% { opacity: 0; }
  }

  .terminal-btn:hover {
    border-color: var(--interactive-border-hover);
    background: var(--interactive-bg-hover);
    box-shadow: var(--interactive-shadow);
    transform: translateY(-1px);
    text-decoration: none;
  }

  .terminal-btn:hover .command {
    color: var(--text-primary);
  }

  .terminal-btn:hover .cursor {
    opacity: 0.9;
  }

  .terminal-btn:active {
    border-color: var(--interactive-border-active);
    transform: translateY(0);
  }

  .terminal-btn:focus-visible {
    border-color: var(--interactive-border-active);
    box-shadow: var(--interactive-shadow-strong);
  }

  @media (max-width: 480px) {
    .terminal-btn {
      width: 100%;
      justify-content: center;
      padding: 11px 16px;
    }
  }
</style>
