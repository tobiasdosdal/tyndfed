---
import { socialLinks } from '~/data/social';
---

<nav class="social-links" aria-label="Social profiles">
  {socialLinks.map((link) => (
    <a href={link.url} target="_blank" rel="noopener noreferrer" aria-label={`${link.name} (opens in a new tab)`}>
      <svg viewBox="0 0 24 24" fill="currentColor" aria-hidden="true" focusable="false">
        <path d={link.icon} />
      </svg>
    </a>
  ))}
</nav>

<style>
  .social-links {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 12px;
    position: relative;
    z-index: 0;
  }

  .social-links a {
    color: var(--text-secondary);
    background: var(--interactive-bg);
    border: 1px solid var(--interactive-border);
    transition:
      color var(--duration-fast) ease,
      background var(--duration-fast) ease,
      border-color var(--duration-fast) ease,
      transform var(--duration-fast) var(--ease-smooth),
      box-shadow var(--duration-normal) var(--ease-smooth);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 12px;
    min-width: 44px;
    min-height: 44px;
    border-radius: 10px;
  }

  .social-links a:hover {
    color: var(--accent);
    background: var(--interactive-bg-hover);
    border-color: var(--interactive-border-hover);
    box-shadow: var(--interactive-shadow);
    transform: translateY(-1px);
  }

  .social-links svg {
    width: 20px;
    height: 20px;
  }

  .social-links a:active {
    transform: translateY(0);
    border-color: var(--interactive-border-active);
  }

  .social-links a:focus-visible {
    border-color: var(--interactive-border-active);
    box-shadow: var(--interactive-shadow-strong);
  }

  @media (max-width: 480px) {
    .social-links {
      gap: 10px;
    }

    .social-links a {
      padding: 10px;
      min-width: 46px;
      min-height: 46px;
    }

    .social-links svg {
      width: 18px;
      height: 18px;
    }
  }
</style>
